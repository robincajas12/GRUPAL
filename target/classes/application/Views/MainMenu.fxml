<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>

<VBox fx:id="root" alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller.MainMenuController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Users" onAction="#handleUsersButton" prefWidth="200" prefHeight="50">
        <font>
            <Font size="18"/>
        </font>
        <style>
            -fx-text-fill: white;
            -fx-background-color: #4CAF50;
            -fx-background-radius: 5;
        </style>
        <effect>
            <DropShadow radius="5" offsetX="2" offsetY="2" color="#00000080"/>
        </effect>
    </Button>

    <Button text="Category" onAction="#handleCategoryButton" prefWidth="200" prefHeight="50">
        <font>
            <Font size="18"/>
        </font>
        <style>
            -fx-text-fill: white;
            -fx-background-color: #2196F3;
            -fx-background-radius: 5;
        </style>
        <effect>
            <DropShadow radius="5" offsetX="2" offsetY="2" color="#00000080"/>
        </effect>
    </Button>

    <Button text="Products" onAction="#handleProductsButton" prefWidth="200" prefHeight="50">
        <font>
            <Font size="18"/>
        </font>
        <style>
            -fx-text-fill: white;
            -fx-background-color: #FF9800;
            -fx-background-radius: 5;
        </style>
        <effect>
            <DropShadow radius="5" offsetX="2" offsetY="2" color="#00000080"/>
        </effect>
    </Button>

    <Button text="Store" onAction="#handleOtherViewButton" prefWidth="200" prefHeight="50">
        <font>
            <Font size="18"/>
        </font>
        <style>
            -fx-text-fill: white;
            -fx-background-color: #9C27B0;
            -fx-background-radius: 5;
        </style>
        <effect>
            <DropShadow radius="5" offsetX="2" offsetY="2" color="#00000080"/>
        </effect>
    </Button>
</VBox>